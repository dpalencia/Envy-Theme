
{% for block in section.blocks %}
    <div {{ block.shopify_attributes }}>
        {% case block.type %}
            {% when 'rich-text' %}
            {% include 'block-rich-text' %}

            {% when 'custom-html' %}
            {% include 'block-custom-html' %}

            {% when 'image-with-text' %}
